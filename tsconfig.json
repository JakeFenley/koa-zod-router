{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2022"],
    "declaration": true,
    "rootDir": "src",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["src/@types"],
    "strict": true,
    "rootDirs": ["src"],
    "alwaysStrict": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
