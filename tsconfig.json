{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2022"],
    "rootDir": "src",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["src/@types"],
    "strict": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
