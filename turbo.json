{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": ["src/**/*.ts", "pnpm-lock.yaml", "tsconfig.json"],
      "outputs": ["dist/**"]
    },
    "test:ci": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "test/**/*.ts"],
      "outputs": [".nyc_output/**", "coverage/**"]
    },
    "lint": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "test/**/*.ts"],
      "outputs": [".eslintcache"]
    }
  }
}
